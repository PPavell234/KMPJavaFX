<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.kmpjavafx.Controller">

    <!-- Левая панель -->
    <left>
        <VBox spacing="10" prefWidth="150">
            <Label text="Совпадения:"/>
            <Label fx:id="matchCountLabel" text="0"/>
            <Button fx:id="prevButton" text="↑ Предыдущее"/>
            <Button fx:id="nextButton" text="↓ Следующее"/>
        </VBox>
    </left>

    <!-- Верхняя панель -->
    <top>
        <HBox spacing="5">
            <Label text="Шаблон:"/>
            <TextField fx:id="patternField" prefWidth="300"/>
            <Button fx:id="searchButton" text="Найти"/>
            <Button fx:id="loadPdfButton" text="Загрузить PDF"/>
        </HBox>
    </top>

    <!-- Центральная часть -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <VBox fx:id="textContainer" prefWidth="700" prefHeight="500"/>
        </ScrollPane>
    </center>
</BorderPane>
